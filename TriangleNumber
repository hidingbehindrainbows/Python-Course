y = input("What is the range? ")
x = int(y)

for i in range(1 , x + 1):
    print()
    for j in range(x , i , -1):
        print(end = ' ')
    for k in range(1 , i+1):
        print(k, end = ' ')
        
        
#this is the second easier program

for i in range(1 , x + 1):
    print()
    for j in range(1 , i):
        print(j, end = ' ')
